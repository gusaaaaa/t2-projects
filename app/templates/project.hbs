  <div class="contentPane">
    <h2>{{name}}</h2>
    <!-- Commented out because it's not working for some reason...
    {{format-date project.startDate}} â€”{{format-date project.endDate}}
    -->



    <button class="edit" {{#link-to 'project-edit' model}}Edit{{/link-to}}</button>

    {{#if model.archived}}
      <button {{action 'toggleArchived'}}>Unarchive</button>
    {{else}}
      <button {{action 'toggleArchived'}}>Archive</button>
    {{/if}}
    {{#link-to 'projects' class="backToList"}}Back to list{{/link-to}}
    <div id="projectOverview">
      <h3>Overview</h3>
      <table>
        <tr>
          <th>Billable:</th>
          <td>{{#if billable}}Yes{{else}}No{{/if}}</td>
        </tr>
<!--         <tr>
          <th>Selling:</th>
          <td></td>
        </tr> -->
        <tr>
          <th>Staffing:</th>
          <td>
            <ul class="comma-separated">
              {{#each office in offices}}
                <li>{{office.name}}</li>
              {{/each}}
            </ul>
          </td>
        </tr>
        <tr>
          <th>Allocations:</th>
          <td>
            <ul class="comma-separated">
              {{#each person in people}}
                <li>{{person.name}}</li>
              {{/each}}
            </ul>
          </td>
        </tr>
        <tr>
          <th>Rates:</th>
          <td>
            <ul>
            {{#if rates.developer}}
              <li>Developer: ${{rates.developer}}/week</li>
            {{/if}}
            {{#if rates.designer}}
              <li>Designer: ${{rates.designer}}/week</li>
            {{/if}}
            {{#if rates.principal}}
              <li>Principal: ${{rates.principal}}/week</li>
            {{/if}}
            {{#if rates.productManager}}
              <li>Product Manager: ${{rates.productManager}}/week</li>
            {{/if}}
          </ul>
          </td>
        </tr>
      </table>
    </div>

