{{input value=searchProxy placeholder='Search for projects'}}
<br/>

{{will-paginate route='projects' data=content}}
<label>
  {{input checked=archivedProxy type="checkbox"}}Show Archived
</label>
{{office-select value=officeProxy prompt="Select an office"}}

{{#link-to 'projects-new'}} New Project {{/link-to}}

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>End Date</th>
    </tr>
  </thead>

  <tbody>
    {{#each project in content}}
    <tr>
      <td> {{#link-to 'project' project.id}}{{project.name}}{{/link-to}} </td>
      <td> {{format-date project.startDate}} </td>
      <td> {{format-date project.endDate}} </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{will-paginate route='projects' data=content}}
{{office-select value=officeProxy prompt="Select an office"}}
